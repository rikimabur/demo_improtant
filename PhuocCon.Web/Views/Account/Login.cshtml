@model PhuocCon.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="account_grid">
    <div class="login-right">
        <h3>Đăng nhập</h3>
        @using (Html.BeginForm("Login", "Account", new {returnUrl = @ViewBag.ReturnUrl
        } ,FormMethod.Post))
        {
            <div>
                <span>Tên đăng nhập<label>*</label></span>
                @Html.TextBoxFor(model=>model.UserName)

            </div>
            <div>
                <span>Mật khẩu<label>*</label></span>
                @Html.PasswordFor(model => model.Password)
            </div>
            <div>
                @Html.CheckBoxFor(model=>model.Remember)
                Nhớ mật khẩu?
            </div>
            <a class="forgot" href="/quen-mat-khau.html">Quên mật khẩu</a>
            <input type="submit" value="Login">
        }

        @Html.Partial("_ExternalLoginsListPartial", new PhuocCon.Web.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
    </div>
    <div class="login-left">
        <a class="acount-btn" href="/dang-ky.html">Đăng ký thành viên</a>
    </div>
    <div class="clearfix"> </div>
</div>

