@model PhuocCon.Web.Infrastructure.Core.PaginationSet<PhuocCon.Web.Models.ProductViewModel>

@{
    var category = (PhuocCon.Web.Models.ProductCategoryViewModel)ViewBag.Category;
    var pageIndex = Model.Page;
    ViewBag.Title = pageIndex == 1 ? category.Name : category.Name + " - Trang " + pageIndex;
    ViewBag.Metakeyword = pageIndex == 1 ? category.Metakeyword : category.Metakeyword + " - Trang " + pageIndex;
    ViewBag.MetaDescription = pageIndex == 1 ? category.Description : category.Description + " - Trang " + pageIndex;
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="women-product">
    <div class="w_content">
        <div class="women">
            <a href="/@(category.Alias).pc-@(category.ID).html"><h4>@category.Name - <span>@Model.TotalCount sản phẩm</span> </h4></a>
            <ul class="w_nav">
                <li>Sắp xếp : </li>
                <li><a class="active" href="?page=@Model.Page&sort=popular">Phổ biến</a></li> |
                <li><a href="?page=@Model.Page&sort=new">Mới</a></li> |
                <li><a href="?page=@Model.Page&sort=discount">Khuyến mãi</a></li> |
                <li><a href="?page=@Model.Page&sort=price">Giá thấp-> cao </a></li>
                <div class="clearfix"> </div>
            </ul>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!-- grids_of_4 -->
    <div class="grid-product">
        @foreach (var product in Model.Items)
        {
           var url = "/" + product.Alias + ".p-" + product.ID + ".html";

            <div class="product-grid">
                <div class="content_box">
                    <a href="@url">
                        <div class="left-grid-view grid-view-left">
                            <img src="@product.Image" class="img-responsive watch-right" alt="" />
                            <div class="mask">
                                <div class="info">Quick View</div>
                            </div>
                        </div>
                    </a>
                </div>
                <h4><a href="@url"> @product.Name</a></h4>
                <p>@product.Description</p>
                @(product.Price == 0 ? " Lien he" : product.Price.ToString("N2"))
            </div>
        }
        <div class="clearfix"></div>
        @if (Model.TotalPages > 1)
        {
            //Create numeric links
            var startPageIndex = Math.Max(1, Model.Page - Model.Maxpage / 2);
            var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.Maxpage / 2);
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @if (Model.Page > 1)
                    {
                        <li>
                            <a href="?page=1" aria-label="First">
                                <i class="fa fa-angle-double-left"></i>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@(Model.Page - 1)" aria-label="Previous">
                                <span class="fa fa-angle-double-left"></span>
                            </a>
                        </li>
                    }
                    @for (int i = startPageIndex; i <= endPageIndex; i++)
                    {
                        if (Model.Page == i)
                        {
                            <li><a href="?page=@i" class="active" title="Trang @i">@i</a></li>
                        }
                        else
                        {
                            <li><a href="?page=@i" title="Trang @i">@i</a></li>
                        }

                    }
                    @if (Model.Page < Model.TotalPages)
                    {
                        <li>
                            <a href="?page=@(Model.Page+1)" aria-label="Last">
                                <i class="fa fa-angle-double-right"></i>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@(Model.TotalPages)" aria-label="Next">
                                <i class="fa fa-angle-double-right"></i>
                            </a>
                        </li>
                    }
                    
                </ul>
            </nav>
        }
       
    </div>
</div>
